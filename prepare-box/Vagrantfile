Vagrant.configure("2") do |config|
  config.vm.define "workshop-machine" do |host|
    host.vm.box = "bento/freebsd-11.1"
    host.vm.hostname = "workshop-machine"

    host.vm.synced_folder ".", "/vagrant", type: "rsync"

    host.vm.provision "shell", name: "install-ports", path: "./provisions/install-ports.sh"
    host.vm.provision "shell", name: "install-ports-tools", path: "./provisions/install-ports-tools.sh"
    host.vm.provision "shell", name: "install-utilities", path: "./provisions/install-utilities.sh"
    host.vm.provision "shell", name: "configure-environment", path: "./provisions/configure-environment.sh"

    host.vm.provider "virtualbox" do |vb|
      #vb.gui = true
      vb.name = "workshop-machine"
      vb.cpus = 2
      vb.memory = 2048
    end
  end
end

